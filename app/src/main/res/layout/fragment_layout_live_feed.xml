<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:id="@+id/fab"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:foregroundGravity="bottom|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ta2_tv_error"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_livefeed_listview"

        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/stylist_border"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintTop_toBottomOf="@+id/tv_next"
        android:layout_marginTop="8dp"
        ads:layout_constraintTop_toBottomOf="@+id/tv_next" android:layout_marginStart="8dp"
        ads:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp" ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp" ads:layout_constraintHorizontal_bias="0.54"
    />

    <TextView
        android:text="Current Ticket:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/cardview_dark_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentTicketTextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:text="N/A"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark" android:textSize="24sp"/>
    <TextView
        android:text="Next Ticket:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_next"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginStart="8dp" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" android:textStyle="normal|bold" android:textSize="24sp"
        android:textColor="@color/cardview_dark_background"/>
    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextAvailableTicket_tv" android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/currentTicketTextView" android:textSize="24sp"
        android:textStyle="normal|bold" android:textColor="@color/colorPrimaryDark"
        android:textAlignment="textStart"/>
    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adView_liveFeed" app:layout_constraintRight_toLeftOf="@+id/fab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_livefeed_listview"
        ads:adUnitId="@string/live_feed_banner"
        ads:adSize="BANNER"
    />
</android.support.constraint.ConstraintLayout>




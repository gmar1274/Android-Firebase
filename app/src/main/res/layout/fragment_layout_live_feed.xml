<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="384dp"
            android:layout_height="161dp"
            android:id="@+id/progressBar_live_feed"
            android:visibility="visible"
            android:indeterminate="true"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="@+id/fragment_livefeed_listview"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_livefeed_listview"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_editor_absoluteY="0dp"
            />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="102dp"
        android:layout_height="102dp"
        app:fabSize="normal"
        android:id="@+id/fab"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:foregroundGravity="bottom|right"
        app:layout_constraintTop_toBottomOf="@+id/fragment_livefeed_listview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ta2_tv_error"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="275dp"
        android:id="@+id/fragment_livefeed_listview"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:background="@drawable/stylist_border"
        android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>



